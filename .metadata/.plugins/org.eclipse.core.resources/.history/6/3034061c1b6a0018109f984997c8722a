package com;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.FileWriter;
import java.io.IOException;

/**
 * @author alisajin
 * InputStream 输入字节流   OutputStream 输出字节流    基类，所有字节流都继承这两个基类
 * -- FileInputStream 和 FileOutputStream  
 * -- ByteArrayInputStream、StringBufferInputStream、FileInputStream 是三种基本的介质流，它们分别从Byte 数组、StringBuffer、和本地文件中读取数据。
 */
public class InputStreamDemo {
	
	/**
     * 根据文件路径创建输入流 FileInputStream
     * @param filePath ： 文件的路径
     *
     */
	
	public String readFileByByte(String filePath){		
		FileInputStream fis = null;
		String result = "";
		try {
			//1.根据路径实例化一个流对象
		    fis = new FileInputStream(filePath);
		    //2.返回这个输入流可以被读的剩下的bytes字节的估计值
			int size = fis.available();
			//3.根据输入流中的字节数创建byte数组
		    byte[] array = new byte[size];
		    //4.把数据读入到数组中
		    fis.read(array);
		    //5.根据获取到的byte数组新建一个字符串，输出
		    result = new String(array); 
		  
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally{
			//6.关闭输入流 释放资源
			if (fis != null) {
				try {
					fis.close();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}		
		return result;				
	}

	/**
     * 根据文件路径创建输出流 FileOutputStream
     * @param filePath ： 文件的路径
     * @param content : 需要写入的内容
     */
	
	public void writeFileByByte(String filePath, String content) {
		FileOutputStream fos = null;
		
		try {
			//1.根据文件路径创建输出流
			fos = new FileOutputStream(filePath);
			//2.将String 转化为byte[]
			byte[] array = content.getBytes();
			//3.将byte[] 输出流
			fos.write(array);
			
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			if (fos != null) {
				try {
					fos.close();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				
			}
		}
		
		
	}
	
	
	/**
     * 根据文件路径创建输出流 FileWriter
     * @param filePath ： 文件的路径
     * @param content : 需要写入的内容
     */
	
	public void writeFileByChar(String filePath, String content) {
		FileWriter fw = null;
		
		try {
			//1.根据文件路径创建输出流
			fw = new FileWriter(filePath);
			//2.将String 转化为char[]
			char[] array = content.toCharArray();
			//3.将char[] 输出流
			fw.write(array);
			
			//fw.write(content);
			
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			if (fw != null) {
				try {
					fw.close();
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				
			}
		}
		
		
	}

	public static void main(String[] args) {
		InputStreamDemo isd = new InputStreamDemo();
		
		String filePath = "D:\\IO_Test\\FileInputStream.txt";
		//String result = isd.readFileByByte(filePath);
		//System.out.println(result);
		
		String content = "This is a new file for FileInputStream test. line add;";
		isd.writeFileByByte(filePath, content);
		
		isd.writeFileByChar(filePath, content);
		
		
		
		
		
	
		
		
	}

}
