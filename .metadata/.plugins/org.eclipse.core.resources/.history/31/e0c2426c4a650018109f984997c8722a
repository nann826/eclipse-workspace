package com.alisa.junit;

public class aa {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int N = 5;
		int result = 0;
        for(int i = 1; i <= N/2; i++){//Ò»°ë
            int sum = 0;
             for(int j = i; j <= N/2 + 1; j++){
                 sum = sum + 1;
                 if(sum == N){
                     result = result + 1;                     
                 }else if(sum > N){
                     break;
                 }         
             }
        }    
        
        System.out.println(result);
	}

}
